  <script>
    function toggleLike(img) {
      const regular = "images/icons/3rdiconhart.jpg";
      const red = "/images/icons/redhart.jpeg";

      // Get the filename (last part of the URL)
      const src = img.src.split('/').pop();

      // Toggle image src
      img.src = src === "3rdiconhart.jpg" ? red : regular;
    }
  </script>


